<Page
    x:Class="ProjectTile.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectTile.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <SplitView x:Name="NavigationView"
               DisplayMode="CompactInline"  
               IsPaneOpen="True" 
               CompactPaneLength="50" 
               OpenPaneLength="300">
        <SplitView.Pane>
            <RelativePanel Padding="0,30,0,0" Background="{ThemeResource SystemControlAcrylicWindowBrush}">
                <Button x:Name="NavigationViewBtn" 
                        FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE700;"
                        Width="50" 
                        Height="50" 
                        Background="Transparent" 
                        Click="OnNavigationViewBtnClick"
                        Style="{ThemeResource ButtonRevealStyle}"/>
            </RelativePanel>
        </SplitView.Pane>

        <SplitView.Content>
            <Grid Background="White">
                
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
